{
  "name": "planright",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,json,md,css}\"",
    "typecheck": "tsc --noEmit",
    "audit:unused": "knip --strict && ts-prune && depcheck",
    "analyze": "vite build && node scripts/visualize.mjs",
    "test": "vitest run --reporter=basic",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:scenarios": "tsx scripts/test-scenarios.ts",
    "ci": "bash scripts/ci-check.sh",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "server": "tsx src/server/chat.ts",
    "dev:full": "concurrently \"npm run server\" \"npm run dev\""
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "node-fetch": "^3.3.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "zod": "^3.25.76",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@playwright/test": "^1.56.0",
    "@testing-library/react": "^16.3.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node-fetch": "^2.6.11",
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^8.46.0",
    "@typescript-eslint/parser": "^8.46.0",
    "@vitejs/plugin-react-swc": "^3.6.0",
    "autoprefixer": "^10.4.20",
    "concurrently": "^8.2.2",
    "depcheck": "^1.4.7",
    "eslint": "^9.37.0",
    "fast-check": "^4.3.0",
    "globals": "^16.4.0",
    "jsdom": "^27.0.0",
    "knip": "^5.64.3",
    "postcss": "^8.4.47",
    "prettier": "^3.6.2",
    "rollup-plugin-visualizer": "^6.0.4",
    "tailwindcss": "^3.4.14",
    "ts-prune": "^0.10.3",
    "tsx": "^4.7.0",
    "typescript": "^5.6.2",
    "vite": "^5.4.6",
    "vite-plugin-checker": "^0.11.0",
    "vitest": "^2.1.2"
  }
}
